<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.code.EstesioTech">

    <!-- Permissões Essenciais para Bluetooth -->
    <!-- Para Android 11 (API 30) ou inferior -->
    <uses-permission android:name="android.permission.BLUETOOTH" android:maxSdkVersion="30" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" android:maxSdkVersion="30" />

    <!-- ✅ CORREÇÃO DO AVISO: Adicionada COARSE_LOCATION -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- Para Android 10 (API 29) ou superior -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Para Android 12 (API 31) ou superior -->
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EstesioTech"
        tools:targetApi="31">

        <!-- TELA DE ENTRADA: LoginActivity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- TELA DE REGISTRO -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:label="Criar Conta" />

        <!-- TELA DO MENU: HomeActivity -->
        <activity
            android:name=".HomeActivity"
            android:exported="false"
            android:label="Menu Principal" />

        <!-- TELA DE ESCANEAMENTO: MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="Encontrar Dispositivos" />

        <!-- TELA DE CONTROLE (O CHAT): DeviceControlActivity -->
        <activity
            android:name=".DeviceControlActivity"
            android:exported="false"
            android:label="@string/chat_title" />

        <!-- TELA DE TESTE (PLACEHOLDER): TesteActivity -->
        <activity
            android:name=".TesteActivity"
            android:exported="false"
            android:label="Tela de Teste" />

    </application>

</manifest>